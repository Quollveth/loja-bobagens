{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "npm install"
    },
    {
      "command": "npm i @popperjs/core",
      "name": "npm i @popperjs/core"
    },
    {
      "command": "npm i react-popper @popperjs/core",
      "name": "npm i react-popper @popperjs/core"
    },
    {
      "command": "npm i -D tailwindcss postcss autoprefixer",
      "name": "npm i -D tailwindcss postcss autoprefixer"
    },
    {
      "command": "npm i @headlessui/react",
      "name": "npm i @headlessui/react"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "dev": {
      "name": "dev",
      "command": "npm run dev",
      "runAtStart": true
    },
    "build": {
      "name": "build",
      "command": "npm run build",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "npm run lint",
      "runAtStart": false
    },
    "preview": {
      "name": "preview",
      "command": "npm run preview",
      "runAtStart": false
    }
  }
}
